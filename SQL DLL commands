CREATE TABLE main_df (
    store_id             VARCHAR(50) NOT NULL,
    store_brand          VARCHAR(100),
    store_name           VARCHAR(255),
    store_address_city   VARCHAR(100),
    store_address_street VARCHAR(255),
    store_address_zip    VARCHAR(10),
    PRIMARY KEY (store_id)
);

CREATE TABLE clearance_df (
    id                        INT AUTO_INCREMENT PRIMARY KEY,
    store_id                  VARCHAR(50),
    store_name                VARCHAR(255),
    offer_currency            VARCHAR(10),
    offer_discount            DOUBLE,
    offer_ean                 VARCHAR(50),
    offer_endTime             DATETIME,
    offer_lastUpdate          DATETIME,
    offer_newPrice            DOUBLE,
    offer_originalPrice       DOUBLE,
    offer_percentDiscount     DOUBLE,
    offer_startTime           DATETIME,
    offer_stock               INT,
    offer_stockUnit           VARCHAR(20),
    product_description       TEXT,
    product_ean               VARCHAR(50),
    product_image             TEXT,
    product_categories_da     TEXT,
    product_categories_en     TEXT
);





